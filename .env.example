# SIBLO Game Client - Environment Configuration Template
# Copy this file to .env and configure for your environment

# ============================================
# Backend API Configuration
# ============================================
# Laravel backend URL
VITE_API_URL=http://localhost:8000

# API request timeout in milliseconds
VITE_API_TIMEOUT=10000

# ============================================
# WebSocket (Laravel Reverb) Configuration
# ============================================
# Reverb app key from your backend .env
VITE_REVERB_APP_KEY=your-reverb-key-here

# Reverb server host
VITE_REVERB_HOST=localhost

# Reverb server port
VITE_REVERB_PORT=8080

# Reverb connection scheme (http or https)
VITE_REVERB_SCHEME=http

# ============================================
# Game Configuration
# ============================================
# Game canvas width in pixels
VITE_GAME_WIDTH=800

# Game canvas height in pixels
VITE_GAME_HEIGHT=600

# Enable debug mode (true/false)
VITE_GAME_DEBUG=false

# ============================================
# Environment-Specific Examples
# ============================================
# Development:
#   VITE_API_URL=http://localhost:8000
#   VITE_GAME_DEBUG=true

# Staging:
#   VITE_API_URL=https://staging-api.siblo.com
#   VITE_REVERB_SCHEME=https
#   VITE_GAME_DEBUG=true

# Production:
#   VITE_API_URL=https://api.siblo.com
#   VITE_REVERB_SCHEME=https
#   VITE_GAME_DEBUG=false
